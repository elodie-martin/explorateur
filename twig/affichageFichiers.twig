{% extends 'secondary.twig' %}

{% block affichageFichiers %} 

    {% for affichageFichier in liste %}

        {% if affichageFichier.isDir == true %}
            <a href="{{affichageFichier.fichier}}" > <img src="media/{{affichageFichier.fichier}}folder.png">{{affichageFichier.fichier}}</a>
        {% else %}

       <img src="media/{{affichageFichier.extension}}.svg"> {{affichageFichier.fichier}} - {{affichageFichier.extension}}
        {% endif %}

    {% endfor %}
    
{% endblock %}