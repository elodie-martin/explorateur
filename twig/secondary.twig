{% block bouton %}


<button class="btnBack" onclick="history.go(-1);"><i class="fas fa-chevron-circle-right"></i></button>
<button class="btnForward" onclick="history.go(1);"><i class="fas fa-chevron-circle-left"></i></button>

{% endblock %}



{% block nav %}
    {% for affichageFichier in liste %}

        {% if affichageFichier.isDir == true %}
            <br><a  href="{{affichageFichier.fichier}}"> <img width="70px" height="70px"  src="media/{{affichageFichier.fichier}}folder.png" ></a>
        {% else %}

        <br><a href="{{affichageFichier.fichier}}"> <img width="70px" height="70px"  src="media/{{affichageFichier.extension}}.svg"> {{affichageFichier.fichier}}</a>
        {% endif %}

    {% endfor %}
{% endblock %}

